{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"files": {
		"ignoreUnknown": false
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"bracketSpacing": false
	},
	"linter": {
		"rules": {
			"complexity": {
				"noUselessConstructor": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
