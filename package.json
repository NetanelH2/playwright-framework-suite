{
	"name": "playwright-framework-suite",
	"version": "1.0.0",
	"private": true,
	"description": "A comprehensive Playwright TypeScript framework with CLI scaffolding tool",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "npm run build --workspaces",
		"clean": "npm run clean --workspaces",
		"test": "npm run test --workspaces",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "changeset publish",
		"dev:framework": "npm run build --workspace=packages/playwright-framework",
		"dev:cli": "npm run dev --workspace=packages/create-playwright-project",
		"dev:workflows": "npm run dev --workspace=packages/create-workflows-package",
		"pre-commit": "lint-staged",
		"prepare": "husky",
		"check": "npm run check --workspaces"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/NetanelH2/plwaywright-framework-suite.git"
	},
	"keywords": [
		"playwright",
		"typescript",
		"testing",
		"e2e",
		"framework",
		"cli",
		"scaffolding"
	],
	"author": "Netanel Harush",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/NetanelH2/playwright-framework-suite/issues"
	},
	"homepage": "https://github.com/NetanelH2/playwright-framework-suite#readme",
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@changesets/changelog-github": "*",
		"@changesets/cli": "*",
		"@types/node": "*",
		"husky": "*",
		"lint-staged": "*",
		"typescript": "*"
	},
	"lint-staged": {
		"*": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true --write"
		]
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	}
}
