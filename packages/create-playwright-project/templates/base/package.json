{
  "name": "my-playwright-project",
  "version": "1.0.0",
  "description": "Playwright TypeScript test project",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project=chromium",
    "test:sanity": "TEST_TAGS='@sanity' playwright test",
    "test:regression": "TEST_TAGS='@regression' playwright test",
    "report": "playwright show-report",
    "lint:check": "eslint src/**/*.ts --max-warnings 0 --no-warn-ignored",
    "format:check": "prettier --check src/**/*.ts",
    "check": "npm run lint:check && npm run format:check && npx tsc",
    "fix": "prettier --write src/**/*.ts && eslint src/**/*.ts --fix --no-warn-ignored",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@netanelh2/playwright-framework": "*",
    "@playwright/test": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "dotenv": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-playwright": "*",
    "eslint-plugin-prettier": "*",
    "jiti": "*",
    "prettier": "*",
    "typescript": "*"
  },
  "keywords": ["playwright", "testing", "typescript", "e2e"],
  "license": "MIT"
}
