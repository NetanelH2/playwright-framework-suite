{
  "name": "my-playwright-project",
  "version": "1.0.0",
  "description": "Playwright TypeScript test project",
  "type": "module",
  "scripts": {
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "lint:check": "eslint src/**/*.ts --max-warnings 0 --no-warn-ignored",
    "format:check": "prettier --check src/**/*.ts",
    "check": "npm run lint:check && npm run format:check && npx tsc",
    "fix": "prettier --write src/**/*.ts && eslint src/**/*.ts --fix --no-warn-ignored",
    "type-check": "tsc --noEmit",
    "trigger-ci": "git commit --allow-empty -m \"trigger CI workflows for testing\" && git push",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:chrome": "playwright test --project=chromium",
    "test:sanity": "TEST_TAGS='@sanity' playwright test",
    "test:regression": "TEST_TAGS='@regression' playwright test",
    "test:sanity:chrome": "TEST_TAGS='@sanity' playwright test --project=chromium",
    "test:regression:chrome": "TEST_TAGS='@regression' playwright test --project=chromium",
    "report": "playwright show-report",
    "codegen": "playwright codegen"
  },
  "devDependencies": {
    "@faker-js/faker": "*",
    "@netanelh2/playwright-framework": "*",
    "@playwright/test": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "dotenv": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-playwright": "*",
    "eslint-plugin-prettier": "*",
    "husky": "*",
    "jiti": "*",
    "lint-staged": "*",
    "prettier": "*",
    "ts-node": "*",
    "typescript": "*"
  },
  "license": "MIT",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "playwright",
    "testing",
    "typescript",
    "e2e"
  ]
}
