{
  "name": "my-playwright-project",
  "version": "1.0.0",
  "description": "Playwright TypeScript test project",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project=chromium",
    "test:sanity": "TEST_TAGS='@sanity' playwright test",
    "test:regression": "TEST_TAGS='@regression' playwright test",
    "report": "playwright show-report",
    "quality-check": "npm run lint:check && npm run format:check && npm run type-check",
    "lint:check": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format:check": "prettier --check \"src/**/*.{js,ts}\"",
    "format:fix": "prettier --write \"src/**/*.{js,ts}\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@netanelh2/playwright-framework": "latest",
    "@playwright/test": "latest",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "dotenv": "latest",
    "eslint": "latest",
    "prettier": "latest",
    "typescript": "latest"
  },
  "keywords": [
    "playwright",
    "testing",
    "typescript",
    "e2e"
  ],
  "license": "MIT"
}
