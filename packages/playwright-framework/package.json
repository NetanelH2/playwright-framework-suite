{
  "name": "@netanelh2/playwright-framework",
  "version": "2.2.6",
  "description": "A robust Playwright TypeScript framework with Page Object Model, smart locators, and utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./helpers": {
      "import": "./dist/helpers/index.js",
      "types": "./dist/helpers/index.d.ts"
    },
    "./fixtures": {
      "import": "./dist/fixtures/index.js",
      "types": "./dist/fixtures/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "echo 'Framework package - tests run in consumer projects'"
  },
  "keywords": [
    "playwright",
    "typescript",
    "testing",
    "e2e",
    "page-object-model",
    "test-framework",
    "automation",
    "locators",
    "utilities",
    "fixtures"
  ],
  "author": "Netanel Harush",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NetanelH2/playwright-framework-suite.git",
    "directory": "packages/playwright-framework"
  },
  "bugs": {
    "url": "https://github.com/NetanelH2/playwright-framework-suite/issues"
  },
  "homepage": "https://github.com/NetanelH2/playwright-framework-suite/tree/main/packages/playwright-framework#readme",
  "peerDependencies": {
    "@playwright/test": "^1.40.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
